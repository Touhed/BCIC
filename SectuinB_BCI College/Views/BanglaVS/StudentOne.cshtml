@model GroupB01_BCIC.Models.BanArtStudent
@{
    ViewData["Title"] = "Student Details";
}


<h1 style="text-align:center">Student Details</h1>
<div class="container">
    <table border="1" class="table table-bordered">
        <thead>
            <tr>
                <td style="text-align:center; font-weight: bold;">Student Id</td>
                <td style="text-align:center; font-weight: bold;">Student Name</td>
                <td style="text-align:center; font-weight: bold;">Department</td>
                <td style="text-align:center; font-weight: bold;">Present Address</td>
                <td style="text-align:center; font-weight: bold;">Permanent Address</td>
                <td style="text-align:center; font-weight: bold;">Contact</td>
                <td style="text-align:center; font-weight: bold;">Email</td>
                <td style="text-align:center; font-weight: bold;">Action</td>
            </tr>
        </thead>
        <tr>
            <td style="text-align:center">@Model.StudentId</td>
            <td style="text-align:center">@Model.StudentName</td>
            <td style="text-align:center">@Model.Department</td>
            <td style="text-align:center">@Model.PresentAddress</td>
            <td style="text-align:center">@Model.PermanentAddress</td>
            <td style="text-align:center">@Model.Contact</td>
            <td style="text-align:center">@Model.Email</td>
            <td style="text-align:center">
                <a asp-action="BanArtStudentOne" asp-route-id="@Model.StudentId" class="btn btn-primary">Details</a>
                <a asp-action="BanArtStudentOne" asp-route-id="@Model.StudentId" class="btn btn-primary">Update</a>
                <a asp-action="BanArtStudentOne" asp-route-id="@Model.StudentId" class="btn btn-primary">Delete</a>
            </td>
        </tr>
    </table>
</div>
