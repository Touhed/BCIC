@model GroupB01_BCIC.Models.BanArtStudent
@{
    ViewData["Title"] = "Edit Student";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>GroupB01_BCCI</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body style="background-color: darkgray;align-content: center; font-family: 'Times New Roman', Times, serif;">
    <div class="container" style="width: 40%;">
        <form asp-controller="BanglaVS" asp-action="EditBanArtStudent" method="post">
            <div asp-validation-summary="All"></div>
            <h2 style="text-align: center;">Edit Bangla Version Arts Student</h2>
            <hr />
            <div class="form-group">
                <label asp-for="StudentId"></label>
                <input asp-for="StudentId" class="form-control" readonly />
                <span asp-validation-for="StudentId"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentName"></label>
                <input asp-for="StudentName" class="form-control" />
                <span asp-validation-for="StudentName"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department"></label>
                <input asp-for="Department" class="form-control" />
                <span asp-validation-for="Department"></span>
            </div>
            <div class="form-group">
                <label asp-for="PresentAddress"></label>
                <input asp-for="PresentAddress" class="form-control" />
                <span asp-validation-for="PresentAddress"></span>
            </div>
            <div class="form-group">
                <label asp-for="PermanentAddress"></label>
                <input asp-for="PermanentAddress" class="form-control" />
                <span asp-validation-for="PermanentAddress"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contact"></label>
                <input asp-for="Contact" class="form-control" />
                <span asp-validation-for="Contact"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email"></span>
            </div>

            <input type="submit" class="btn-primary" value="Update" />
        </form>
    </div>
</body>
</html>
